{
    "compilerOptions": {
      "declaration": true,
      "declarationMap": true,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "forceConsistentCasingInFileNames": true,
      "lib": ["es2020"],
      "target": "es2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": true,
      "removeComments": true,
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": true,
    },
    "exclude": ["node_modules", "dist"]
}